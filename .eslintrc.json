{
  "extends": ["eslint:recommended", "next", "next/core-web-vitals", "next/typescript", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "@typescript-eslint/no-explicit-any": "off"
  },
  "overrides": [
    {
      "files": ["src/**/*.test.ts"],
      "rules": {
        // Disable "is not defined" rule for test files
        "no-undef": "off"
      }
    }
  ]
}
